<?xml version="1.0" encoding="UTF-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scroll_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        style="@style/scroll_view">

    <TableLayout
            style="@style/table_layout">

        <!-- Row 1 with single column -->

        <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

            <TextView
                    android:id="@+id/game_over"
                    style="@style/table_row"
                    android:padding="8dp"
                    android:textSize="20sp"
                    android:layout_span="3"
                    android:text="@+id/game_over" />
        </TableRow>

        <!-- Row 2 -->

        <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

            <TextView
                    android:id="@+id/correct_answer"
                    style="@style/table_row"
                    android:textStyle="bold"
                    android:padding="6dp"
                    android:textSize="18sp"
                    android:text="@+id/correct_answer" />

            <TextView
                    android:id="@+id/number_correct_answer"
                    style="@style/table_row"
                    android:padding="6dp"
                    android:textSize="18sp"
                    android:text="@+id/number_correct_answer" />

            <TextView
                    android:id="@+id/point_correct_answer"
                    style="@style/table_row"
                    android:padding="6dp"
                    android:textSize="18sp"
                    android:text="@string/point_correct" />

        </TableRow>

        <!-- Row 3 -->

        <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

            <TextView
                    android:id="@+id/wrong_answer"
                    style="@style/table_row"
                    android:textStyle="bold"
                    android:padding="6dp"
                    android:textSize="18sp"
                    android:text="@+id/wrong_answer" />

            <TextView
                    android:id="@+id/number_wrong_answer"
                    style="@style/table_row"
                    android:padding="6dp"
                    android:textSize="18sp"
                    android:text="@+id/number_wrong_answer" />

            <TextView
                    android:id="@+id/point_wrong_answer"
                    style="@style/table_row"
                    android:padding="6dp"
                    android:textSize="18sp"
                    android:text="@string/point_wrong" />
        </TableRow>

        <!-- Row 4 -->

        <TableRow
                android:id="@+id/tableRow4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

            <TextView
                    android:id="@+id/point"
                    style="@style/table_row"
                    android:textStyle="bold"
                    android:padding="6dp"
                    android:textSize="18sp"
                    android:text="@+id/point" />

            <TextView
                    android:id="@+id/point_value"
                    style="@style/table_row"
                    android:padding="6dp"
                    android:textSize="18sp"
                    android:text="@+id/point_value" />
        </TableRow>

        <!-- Row 5 -->

        <TableRow
                android:id="@+id/tableRow5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

            <TextView
                    android:id="@+id/rate"
                    style="@style/table_row"
                    android:textStyle="bold"
                    android:padding="6dp"
                    android:textSize="18sp"
                    android:text="@+id/rate" />

            <TextView
                    android:id="@+id/rate_value"
                    style="@style/table_row"
                    android:padding="6dp"
                    android:textSize="18sp"
                    android:text="@+id/rate_value" />
        </TableRow>

        <!-- Buttons -->
        <Button
                android:id="@+id/review"
                style="@style/button"
                android:text="@+id/review"/>

        <Button
                android:id="@+id/back"
                style="@style/button"
                android:text="@+id/back" />

    </TableLayout>
</ScrollView>