<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid
                    android:color="#f1d23a" />
            <stroke
                    android:width="1dp"
                    android:color="#b1621d" />
            <corners
                    android:radius="7dp" />
            <padding
                    android:left="10dp"
                    android:top="15dp"
                    android:right="10dp"
                    android:bottom="15dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                    android:startColor="#f1d23a"
                    android:endColor="#c6821f"
                    android:angle="270" />
            <stroke
                    android:width="1dp"
                    android:color="#b1621d" />
            <corners
                    android:radius="7dp" />
            <padding
                    android:left="10dp"
                    android:top="15dp"
                    android:right="15dp"
                    android:bottom="10dp" />
        </shape>
    </item>
</selector>